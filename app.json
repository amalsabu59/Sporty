{
  "expo": {
    "name": "ecom",
    "slug": "ecom",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "permissions": [
      "android.permission.RECORD_AUDIO"
    ],
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Allow Ecom to access your microphone",
          "speechRecogntionPermission": "Allow Ecom to securely recognize user speech"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}